#!/bin/bash
echo "------------------------------------------------------------------------"
echo `cd "${0%/*}" 2>/dev/null; echo $PWD/${0##*/}`
echo "------------------------------------------------------------------------"
set -x
source "${HOME3P}/utilx"
[ $? -ne 0 ] && exit 1
#
cleanup .      "$1" || exit 1
cleanup flac   "$1" || exit 1
cleanup mad    "$1" || exit 1
cleanup id3tag "$1" || exit 1
#
exit 0
